@model List<WebApplicationForTest.Models.Q>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3><big>Выберите верный ответ:</big></h3> <br>
    <form method="post" action="ResultUsers">


        
        @for (int i=0; i<10;i++) {
            <table>
                <tr>
                    <td><p>   @(i+1) вопрос: </p></td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <input type="radio"
                                   name=@(i.ToString()) value="first">

                            <span>Первый вариант</span> <br>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <input type="radio"
                                   name=@(i.ToString()) value="second">
                            <span>Второй вариант</span> <br>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <input type="radio"
                                   name=@(i.ToString())  value="therd">
                            <span>Третий вариант</span> <br>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <input type="radio"
                                   name=@(i.ToString())  value="fourth">
                            <span>Четвертый вариант</span><br>
                        </p>
                    </td>
                </tr>

            </table> <br>
        }
        <table>
            <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
        </table>
    </form>
</div>

